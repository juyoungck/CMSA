<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/post_main"
    android:fillViewport="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp" >

            <ImageButton
                android:layout_width="30dp"
                android:layout_height="38dp"
                android:id="@+id/btnBack_codyadd"
                android:background="#00ff0000"
                android:src="@drawable/arrow_back"
                android:layout_marginLeft="-10dp"
                android:layout_marginTop="-10dp"/>

            <TextView
                android:layout_marginTop="-10dp"
                android:textAlignment="center"
                android:textSize="30sp"
                android:layout_width="315dp"
                android:layout_height="40dp"
                android:text="코디등록"/>

        </LinearLayout>

        <ImageButton
            android:layout_marginTop="20dp"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:id="@+id/add_cod_thumb"
            android:layout_marginBottom="8dp"
            android:layout_gravity="center"
            android:src="@drawable/baseline_add_box_24"
            android:background="#00ff0000"
            android:scaleType="fitCenter"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00ff0000"
            android:layout_columnWeight="1"
            android:textAlignment="center"
            android:layout_marginBottom="15dp"
            android:textColor="#000000"
            android:textSize="25dp"
            android:text="대표 이미지" />

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rowCount="8"
            android:columnCount="2"
            android:layout_gravity="center">

            <ImageButton
                android:id="@+id/detail_cod_index1"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:scaleType="fitCenter"
                android:background="#FFFFFF"
                android:src="@drawable/baseline_add_box_24"
                android:text="상의"/>

            <ImageButton
                android:id="@+id/detail_cod_index2"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:scaleType="fitCenter"
                android:background="#FFFFFF"
                android:src="@drawable/baseline_add_box_24"
                android:text="하의"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:layout_columnWeight="1"
                android:textAlignment="center"
                android:textColor="#000000"
                android:text="상의" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:layout_columnWeight="1"
                android:textAlignment="center"
                android:textColor="#000000"
                android:text="하의" />

            <ImageButton
                android:id="@+id/detail_cod_index3"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:scaleType="fitCenter"
                android:background="#FFFFFF"
                android:src="@drawable/baseline_add_box_24" />

            <ImageButton
                android:id="@+id/detail_cod_index4"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:scaleType="fitCenter"
                android:background="#FFFFFF"
                android:src="@drawable/baseline_add_box_24" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:layout_columnWeight="1"
                android:textAlignment="center"
                android:textColor="#000000"
                android:text="신발" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:layout_columnWeight="1"
                android:textAlignment="center"
                android:textColor="#000000"
                android:text="외투" />

            <ImageButton
                android:id="@+id/detail_cod_index5"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:scaleType="fitCenter"
                android:background="#FFFFFF"
                android:src="@drawable/baseline_add_box_24"/>

            <ImageButton
                android:id="@+id/detail_cod_index6"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:scaleType="fitCenter"
                android:background="#FFFFFF"
                android:src="@drawable/baseline_add_box_24"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:layout_columnWeight="1"
                android:textAlignment="center"
                android:textColor="#000000"
                android:text="속옷" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:layout_columnWeight="1"
                android:textAlignment="center"
                android:textColor="#000000"
                android:text="양말" />

            <ImageButton
                android:id="@+id/detail_cod_index7"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:scaleType="fitCenter"
                android:background="#FFFFFF"
                android:src="@drawable/baseline_add_box_24"/>

            <ImageButton
                android:id="@+id/detail_cod_index8"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:scaleType="fitCenter"
                android:background="#FFFFFF"
                android:src="@drawable/baseline_add_box_24"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:layout_columnWeight="1"
                android:textAlignment="center"
                android:textColor="#000000"
                android:text="액세서리" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:layout_columnWeight="1"
                android:textAlignment="center"
                android:textColor="#000000"
                android:text="가방" />
        </GridLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="코디 위치"
            android:textSize="18dp"
            android:padding="10dp"/>

        <Spinner
            android:id="@+id/cody_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:text="코디명 "
                android:padding="10dp"/>

        </LinearLayout>
        <EditText
            android:id="@+id/codyadd_title"
            android:layout_width="140dp"
            android:layout_height="wrap_content"

            />
        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="30dp"
            android:layout_gravity="center">

            <CheckBox
                android:id="@+id/weatherSelect_spring"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:text="봄"
                android:textAlignment="center"
                android:background="#f1f3f5" />

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:text="여름"
                android:textAlignment="center"
                android:background="#f1f3f5"
                android:id="@+id/weatherSelect_summer"/>

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="가을"
                android:layout_weight="1"
                android:button="@null"
                android:textAlignment="center"
                android:background="#f1f3f5"
                android:id="@+id/weatherSelect_fall" />

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="겨울"
                android:layout_weight="1"
                android:button="@null"
                android:textAlignment="center"
                android:background="#f1f3f5"
                android:id="@+id/weatherSelect_winter" />

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="전체"
                android:layout_weight="1"
                android:button="@null"
                android:textAlignment="center"
                android:background="#f1f3f5"
                android:id="@+id/weatherSelect_communal"/>
        </LinearLayout>
        <Button
            android:layout_marginTop="20dp"
            android:id="@+id/codyadd_post"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="등록"/>
    </LinearLayout>


</ScrollView>
