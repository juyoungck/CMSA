<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/post_main"
    android:fillViewport="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="30dp">

        <TextView
            android:layout_marginTop="-10dp"
            android:textAlignment="center"
            android:textSize="30sp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="옷등록"/>

        <ImageButton
            android:id="@+id/c_img_post"
            android:layout_marginTop="20dp"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_gravity="center"
            android:background="@drawable/clothes"/>

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="옷장 위치"
            android:textSize="20dp" />

        <Spinner
            android:id="@+id/c_loc_post"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="옷 이름"
            android:textSize="20dp" />
        <EditText
            android:id="@+id/c_name_post"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:hint="옷 이름을 입력해주세요."/>

        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="옷 브랜드"
            android:textSize="20dp" />
        <EditText
            android:id="@+id/c_brand_post"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:hint="브랜드 이름을 입력해주세요."/>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="옷 종류"
                android:textSize="20dp" />
            <EditText
                android:id="@+id/c_type_post_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="invisible"
                android:text=""
                android:hint="종류 입력"/>
            <Spinner
                android:id="@+id/c_type_post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="옷 사이즈"
                android:textSize="20dp" />
            <EditText
                android:id="@+id/c_size_post_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="invisible"
                android:text=""
                android:hint="사이즈 입력"/>
            <Spinner
                android:id="@+id/c_size_post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="50dp" >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="태그"
                android:textAlignment="center"
                android:layout_marginTop="15dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="30dp"
            android:layout_gravity="center">

            <CheckBox
                android:id="@+id/weatherSelect_spring"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:text="봄"
                android:textAlignment="center"
                android:background="#f1f3f5" />

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:text="여름"
                android:textAlignment="center"
                android:background="#f1f3f5"
                android:id="@+id/weatherSelect_summer"/>

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="가을"
                android:layout_weight="1"
                android:button="@null"
                android:textAlignment="center"
                android:background="#f1f3f5"
                android:id="@+id/weatherSelect_fall" />

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="겨울"
                android:layout_weight="1"
                android:button="@null"
                android:textAlignment="center"
                android:background="#f1f3f5"
                android:id="@+id/weatherSelect_winter" />

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="전체"
                android:layout_weight="1"
                android:button="@null"
                android:textAlignment="center"
                android:background="#f1f3f5"
                android:id="@+id/weatherSelect_communal"/>
        </LinearLayout>

        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="메모"
            android:textSize="20dp" />
        <EditText
            android:id="@+id/c_memo_post"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:hint="메모를 입력해주세요."/>

        <Button
            android:layout_marginTop="20dp"
            android:id="@+id/cloth_post"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="등록"/>
    </LinearLayout>

</ScrollView>